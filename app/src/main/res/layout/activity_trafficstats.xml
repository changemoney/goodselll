<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/titlebar" />
    <LinearLayout android:orientation="horizontal" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/api_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="execute api" />
        <Button android:id="@id/refresh_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="refresh" />
    </LinearLayout>
    <ScrollView android:id="@id/scroll_vertical" android:padding="10.0dip" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <HorizontalScrollView android:id="@id/scroll_horizontal" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:typeface="monospace" android:id="@id/textview" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>