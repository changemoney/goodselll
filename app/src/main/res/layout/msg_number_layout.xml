<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="25.0dip"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/im_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center|top">

        <ImageView
            android:id="@id/msg_number_icon"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:scaleType="center"
            android:src="@drawable/msg_number_selector_green" />

        <ImageView
            android:id="@id/msg_number_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/msg_number_icon"
            android:layout_marginRight="@dimen/dimen_3dp"
            android:background="@drawable/ic_new"
            android:visibility="gone" />

        <TextView
            android:id="@id/msg_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dimen_3dp"
            android:background="@drawable/bg_msg_point"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="2.0dip"
            android:paddingRight="2.0dip"
            android:textColor="#ffffffff"
            android:textSize="10.0dip"
            android:visibility="visible" />

        <TextView
            android:id="@id/msg_number_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/msg_number_icon"
            android:layout_marginRight="@dimen/dimen_3dp"
            android:text="消息"
            android:textColor="@color/titlebar_green"
            android:textSize="@dimen/dimen_8dp" />
    </RelativeLayout>
</LinearLayout>