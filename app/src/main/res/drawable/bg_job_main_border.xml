<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke android:width="0.5dip" android:color="#fff7f7f7" />
            <solid android:color="@color/bg_pressed_all" />
            <corners android:radius="4.0px" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dip" android:color="#fff7f7f7" />
            <solid android:color="@color/bg_pressed_all" />
            <corners android:radius="4.0px" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:width="0.5dip" android:color="#fff7f7f7" />
            <solid android:color="@color/bg_pressed_all" />
            <corners android:radius="4.0px" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dip" android:color="#fff7f7f7" />
            <solid android:color="#fffbfbfb" />
            <corners android:radius="4.0px" />
        </shape>
    </item>
</selector>